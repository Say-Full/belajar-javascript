<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>

            <% if (! contact) { %>
                <div class="alert alert-danger" role="alert">
                    Kontak tidak ditemukan
                    <br>
                    <a href="/contact" class="alert-link">&laquo; Kembali</a>
                </div>
            <% } else { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= contact.nama %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= contact.npm %></h6>
                        <p class="card-text"><%= contact.noHp %></p>
                        <a href="/contact/edit/<%= contact.npm %>" class="btn btn-info badge">Ubah</a>
                        <!-- <a href="/contact/delete/<%= contact.npm %>" class="btn btn-danger badge" onclick="return confirm('Yakin?')">Hapus</a> -->
                        <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                            <input type="hidden" name="npm" value="<%= contact.npm %>">
                            <button type="submit" class="btn btn-danger bade" onclick="return confirm('Yakin?')">Hapus</button>
                        </form>
                        <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>